<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_24dp"
        app:background="@android:color/transparent"
        app:cardCornerRadius="@dimen/_20dp"
        app:cardElevation="@dimen/_10dp">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_24dp">

                <ImageView
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="@dimen/_70dp"
                    android:layout_marginTop="@dimen/_24dp"
                    android:src="@drawable/contacts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/iransans"
                    android:gravity="center"
                    android:text="@string/Permission_granted"
                    android:textSize="@dimen/_24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/iransans"
                    android:gravity="center"
                    android:text="@string/permission_request"
                    android:textSize="@dimen/_20sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btn_never_mind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:text="@string/never_mind"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:text="@string/continue_permission"
                        android:textSize="@dimen/_15sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </com.google.android.material.card.MaterialCardView>
</layout>